# Google Cloud Run 優化版 Dockerfile
FROM python:3.11-slim

WORKDIR /app

# 安裝系統依賴 (包含科學計算和中文字體支援)
RUN apt-get update && apt-get install -y \
    build-essential \
    gfortran \
    libopenblas-dev \
    liblapack-dev \
    pkg-config \
    curl \
    fonts-dejavu-core \
    fontconfig \
    && rm -rf /var/lib/apt/lists/*

# 設置中文字體
RUN fc-cache -fv

# 複製依賴文件
COPY requirements-minimal.txt .

# 先安裝基礎科學計算依賴 (避免編譯錯誤)
RUN pip install --no-cache-dir \
    numpy==1.26.4 \
    pandas==2.2.2

# 安裝其餘依賴 (排除problematic packages)
RUN pip install --no-cache-dir \
    fastapi==0.111.0 \
    uvicorn[standard]==0.30.1 \
    pydantic[email]==2.8.2 \
    pydantic-settings==2.3.4 \
    yfinance==0.2.28 \
    requests==2.32.3 \
    matplotlib==3.9.1 \
    plotly==5.17.0 \
    sqlalchemy==2.0.31 \
    PyJWT==2.8.0 \
    python-multipart==0.0.9 \
    bcrypt==4.1.3 \
    passlib==1.7.4 \
    python-jose[cryptography]==3.3.0 \
    google-auth==2.29.0 \
    google-auth-oauthlib==1.2.0 \
    openai==1.35.13 \
    python-dotenv==1.0.1 \
    aiofiles==23.2.1 \
    python-dateutil==2.9.0.post0 \
    pytz==2024.1 \
    aiohttp==3.9.5 \
    websockets==12.0 \
    httpx==0.27.0 \
    loguru==0.7.2 \
    Pillow==10.4.0

# 複製主應用文件
COPY main_integrated.py .
COPY .env* ./

# 設置環境變數
ENV PYTHONPATH=/app
ENV ENVIRONMENT=production
ENV DEBUG=false
ENV DATABASE_URL=sqlite:///tmp/trading.db
ENV MPLBACKEND=Agg

# Cloud Run會自動設置$PORT環境變數
ENV PORT=8080
EXPOSE $PORT

# 健康檢查
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:$PORT/health || exit 1

# 啟動命令 - 直接執行 main_integrated.py
CMD python main_integrated.py