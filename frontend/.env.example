# 前端環境變數配置範例

# ==========================================
# 🌐 API 服務配置
# ==========================================

# 開發環境 - 本地API服務
NEXT_PUBLIC_API_URL=http://localhost:8001

# 生產環境 - Google Cloud Run API服務
# NEXT_PUBLIC_API_URL=https://your-api-service.a.run.app

# WebSocket 配置
NEXT_PUBLIC_WS_URL=ws://localhost:8001

# 生產環境 WebSocket
# NEXT_PUBLIC_WS_URL=wss://your-api-service.a.run.app

# ==========================================
# 🔐 認證配置
# ==========================================

# Google OAuth 設置
NEXT_PUBLIC_GOOGLE_CLIENT_ID=610357573971-t2r6c0b3i8fq8kng1j8e5s4l6jiqiggf.apps.googleusercontent.com

# JWT 配置
NEXT_PUBLIC_JWT_SECRET=your_jwt_secret_here

# ==========================================
# 🎨 UI 配置
# ==========================================

# 預設語言
NEXT_PUBLIC_DEFAULT_LANGUAGE=zh

# 主題設置
NEXT_PUBLIC_DEFAULT_THEME=dark

# 功能開關
NEXT_PUBLIC_FEATURE_AI_ANALYSIS=true
NEXT_PUBLIC_FEATURE_REDEMPTION=true
NEXT_PUBLIC_FEATURE_TAIWAN_STOCKS=true

# ==========================================
# 📊 分析配置
# ==========================================

# 預設股票代碼
NEXT_PUBLIC_DEFAULT_SYMBOL=AAPL

# 圖表配置
NEXT_PUBLIC_CHART_HEIGHT=400
NEXT_PUBLIC_CHART_THEME=dark

# ==========================================
# 🔄 快取配置
# ==========================================

# API 快取時間（秒）
NEXT_PUBLIC_CACHE_TTL=300

# ==========================================
# 📈 監控配置
# ==========================================

# Google Analytics (可選)
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry 錯誤追蹤 (可選)
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# ==========================================
# 🌐 部署配置
# ==========================================

# 部署環境
NEXT_PUBLIC_ENVIRONMENT=development

# 版本資訊
NEXT_PUBLIC_VERSION=1.0.0

# CDN 配置 (生產環境)
# NEXT_PUBLIC_CDN_URL=https://your-cdn.com