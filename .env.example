# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/trading_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=trading_db
DATABASE_USER=trading_user
DATABASE_PASSWORD=secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Trading Configuration
DEFAULT_STOP_LOSS=0.02
DEFAULT_POSITION_SIZE=0.1
RISK_FREE_RATE=0.045

# Market Data Configuration
UPDATE_INTERVAL_MINUTES=15
MAX_SYMBOLS_PER_BATCH=10

# TradingView Configuration (for chart scraping)
TRADINGVIEW_USERNAME=your_username
TRADINGVIEW_PASSWORD=your_password

# Taiwan Stock Market (optional)
TWSE_API_KEY=your_twse_key_here

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading_system.log

# Cloud Configuration (AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=trading-system-charts

# Cloud Configuration (Azure)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER_NAME=trading-charts

# Development/Production
ENVIRONMENT=development
DEBUG=true